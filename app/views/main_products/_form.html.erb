<div class="row">
  <div class="col-lg-8 col-md-10 col-sm-12 col-xs-12">
    <%= form_for @main_product, html: { multipart: true } do |f| %>
        <% if @main_product.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@main_product.errors.count, "error") %> prohibited this main_product from being saved:</h2>

              <ul>
                <% @main_product.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="row">
          <div class="col-xs-12 form-group">
            <%= f.label :product_id %>
            <%= select_tag 'main_product[product_id]',
                           options_from_collection_for_select(all_products, 'id', 'name', @main_product.product_id),
                           class: 'form-control' %>
          </div>
          <div class="col-sm-4 col-md-3 col-xs-12 form-group">
            <%= f.label :position %>
            <%= f.number_field :position, class: 'form-control', min: 1 %>
          </div>
          <div class="col-xs-12">
            <%= f.submit class: 'btn btn-success pull-right' %>
          </div>
        </div>
    <% end %>
  </div>
</div>