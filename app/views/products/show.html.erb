<div class="row">
  <div class="col-xs-12 col-md-5 col-lg-5">
    <div class="thumbnail">
      <%= image_tag @product.product_attachments.first.image.url %>
    </div>
  </div>
  <div class="col-xs-12 col-md-7 col-lg-7">
    <h1><%= @product.name %></h1>
    <div class="field">
      <strong>Article:</strong>
      <%= @product.article %>
    </div>
    <div class="field">
      <strong>Price:</strong>
      <%= number_to_currency @product.price %>
    </div>
    <%= form_for :product, url: add_product_path, html: { class: 'small-fixed-col' } do |f| %>
      <%= f.hidden_field :id %>
      <div class="field">
        <strong>Amount:</strong>
        <%= number_field_tag 'product[amount]', '1', min: 1, class: 'form-control', required: true %>
      </div>
      <div class="field">
        <%= f.submit 'Add to cart', class: 'btn btn-primary' %>
      </div>
    <% end %>
    <div class="field">
      <%= link_to 'Continue buying', category_path(@product.category), class: 'btn btn-default' %>
    </div>
    <div class="field">
      <%= link_to 'Finish', cart_path, class: 'btn btn-success' %>
    </div>
  </div>
  <div class="col-xs-12">
    <div class="row">
      <% @product_attachment.each do |p| %>
          <div class="col-xs-6 col-md-4 col-lg-3">
            <div class="thumbnail fixed-height">
              <%= image_tag p.image.url(:preview) %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>

