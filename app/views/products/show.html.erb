<div class="row">
  <div class="col-xs-12 col-md-5 col-lg-5">
    <div class="thumbnail">
      <%= image_tag @product.product_attachments.first.image.url %>
    </div>
  </div>
  <div class="col-xs-12 col-md-7 col-lg-7">
    <h1>
      <%= @product.name %>
      (<%= link_to 'Edit', edit_product_path(@product) %>)
    </h1>
    <h4>
      <strong>Article:</strong>
      <%= @product.article %>
    </h4>
    <h4>
      <strong>Price:</strong>
      <%= number_to_currency @product.price %>
    </h4>
  </div>
  <div class="col-xs-12">
    <div class="row">
      <% @product_attachment.each do |p| %>
          <div class="col-xs-6 col-md-4 col-lg-3">
            <div class="thumbnail fixed-height">
              <%= image_tag p.image.url(:preview) %>
              <div class="caption">
                <%= link_to 'Edit', edit_product_attachment_path(p) %>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>

