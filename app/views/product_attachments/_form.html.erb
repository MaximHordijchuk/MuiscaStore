<div class="row">
  <div class="col-lg-8 col-md-9 col-sm-10 col-xs-12">
    <%= form_for([@product, @product_attachment]) do |f| %>
      <% if @product_attachment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product_attachment.errors.count, "error") %> prohibited this product_attachment from being saved:</h2>

          <ul>
          <% @product_attachment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <% if @product_attachment.persisted? %>
        <div class="thumbnail">
          <%= image_tag @product_attachment.image %>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :image %><br>
        <%= f.file_field :image %>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <% if @product_attachment.persisted? %>
            <%= f.submit 'Change image', class: 'btn btn-success pull-right' %>
          <% else %>
            <%= f.submit 'Add image', class: 'btn btn-success pull-right' %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
