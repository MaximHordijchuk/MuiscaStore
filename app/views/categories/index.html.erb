<h1>Categories</h1>

<div id="new-category-block">
  <%= link_to 'New Category', new_category_path, id: 'new-category-btn', class: 'btn btn-success' %>
</div>

<table id="categories-table" class="table table-bordered table-hover">
  <tbody>
  <% @categories.each do |category| %>
      <tr>
        <td class="btn-group-xs">
          <%= category.position %>

        </td>
        <td><%= category.name %>
          <div class="pull-right btn-group-xs">
            <%= link_to 'Show', category, class: 'btn btn-default' %>
            <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-primary' %>
            <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>


