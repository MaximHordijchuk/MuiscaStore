<h1><%= @category.name %></h1>

<div class="row">
  <% @products.each do |product| %>
    <a href="<%= product_path(product) %>">
      <div class="col-xs-6 col-md-4 col-lg-3">
        <div class="thumbnail fixed-height">
          <%= image_tag product.product_attachments.first.image.url(:preview) %>
          <div class="caption">
            <p><%= product.name %></p>
            <p><strong><%= number_to_currency product.price %></strong></p>
          </div>
        </div>
      </div>
    </a>
  <% end %>
</div>
